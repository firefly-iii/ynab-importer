{% extends "./layout/default" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ mainTitle }}</h1>
                <h2>{{ subTitle }}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p class="lead">Map YNAB data to your Firefly III data.</p>
                <p>
                    Check out the list of accounts below, and use the dropdowns to link these entries
                    to data in your Firefly III installation. The
                    <a target="_blank" href="https://docs.firefly-iii.org/other-data-importers/usage/map/">documentation</a> may tell you more.
                </p>
                {% if not errors.isEmpty %}
                    <p class="text-danger">Some error(s) occurred:</p>
                    <ul>
                        {% for error in errors.all %}
                            <li class="text-danger">{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <hr/>
                <div class="row">
                    <div class="col-lg-12">
                        <form method="post" action="{{ route('import.mapping.post') }}" accept-charset="UTF-8">
                            <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                                <h3>Accounts</h3>
                                <table class="table">
                                    <tr>
                                        <th style="width:50%;">YNAB account</th>
                                        <th style="width:50%;">Firefly III account</th>
                                    </tr>
                                    {% for accountId, accountName in ynabAccounts %}
                                        <tr>
                                            <td>
                                                {{ accountName }}<br />
                                                <small class="text-muted">{{ accountId }}</small>
                                                <input type="hidden" name="ynab_accounts[{{ loop.index0 }}]" value="{{ accountId }}" />
                                            </td>
                                            <td>
                                                <select name="mapping[{{ accountId }}]" class="form-control">
                                                    <option value="0" label="(do not map / automap)">(do not map / automap)</option>
                                                    {% for accountType, subList in ff3Accounts %}

                                                        <!-- loop account type -->
                                                        <optgroup label="{{ accountType }}">
                                                            {% for ffAccountId, ffAccountName in subList %}
                                                                <option
                                                                        {% if mapping[accountId] == ffAccountId %}selected{% endif %}
                                                                       label="{{ ffAccountName }}"
                                                                       value="{{ ffAccountId }}">
                                                                    {{ ffAccountName }}
                                                                </option>
                                                            {% endfor %}
                                                        </optgroup>
                                                    {% endfor %}
                                                </select>

                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>

                            <div class="row">
                                <div class="col-lg-6">
                                    <!-- go back to start -->
                                    <a href="{{ route('back.config') }}" class="btn btn-secondary">&larr; Go back to configuration</a>
                                    <br />
                                    <small class="text-muted">Changes on this page will not be saved.</small>
                                </div>
                                <div class="col-lg-6">
                                    <!-- continue -->
                                    <button type="submit" class="float-right btn btn-primary">Submit &rarr;</button>
                                </div>
                            </div>

                            {# hidden in the form is the asset type for all firefly iii accounts. will be very useful later on #}
                            {% for type, list in ff3Accounts %}
                                {% for id, name in list %}
                                    <input type="hidden" name="account_type[{{ id }}]" value="{{ type }}" />
                                {% endfor %}
                            {% endfor %}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script type="text/javascript">

    </script>
{% endblock %}
