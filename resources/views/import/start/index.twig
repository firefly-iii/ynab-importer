{% extends "./layout/default" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ mainTitle }}</h1>
            <h2>{{ subTitle }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p class="lead">Life is easy with a JSON file!</p>
            <p>
                If you've used this import tool before you may have a JSON file with configuration information. If not, no worries! This step
                is entirely optional. Just click "continue". Would you like to know
                <a target="_blank" href="https://docs.firefly-iii.org/other-data-importers/usage/upload/">more</a>?
            </p>
            <hr/>
            <form method="post" action="{{ route('import.upload') }}" accept-charset="UTF-8" id="store" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-8">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}"/>
                        <div class="form-group row">
                            <label for="config_file" class="col-sm-4 col-form-label">Optional configuration file</label>
                            <div class="col-sm-8">
                                <input type="file" class="form-control" id="config_file" name="config_file" placeholder="Configuration file"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <!-- go back to start -->
                        <a href="{{ route('back.start') }}" class="btn btn-secondary">&larr; Go back to index</a>
                    </div>
                    <div class="col-lg-6">
                        <!-- continue -->
                        <button type="submit" class="float-right btn btn-primary">Upload &rarr;</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block scripts %}
{% endblock %}
