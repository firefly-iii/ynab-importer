{% extends "./layout/default" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ mainTitle }}</h1>
                <h2>{{ subTitle }}</h2>
            </div>
        </div>
        <div id="app">
            <sync-status></sync-status>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        var syncStatusUri = '{{ route('import.sync.status') }}?syncIdentifier={{ syncIdentifier }}';
        var syncStartUri = '{{ route('import.sync.start') }}?syncIdentifier={{ syncIdentifier }}';
        var configDownloadUri = '{{ route('import.configuration.download') }}?downloadIdentifier={{ downloadIdentifier }}';
        var flushUri = '{{ route('flush') }}';
    </script>
    <script src="js/sync.js" type="text/javascript"></script>
{% endblock %}
